<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>Build_Status</fullName>
        <field>Last_Build_Status__c</field>
        <formula>"PENDING"</formula>
        <name>Build_Status</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <targetObject>Jenkins_Job__c</targetObject>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>UpdateJenkinsJobstatusSuccess</fullName>
        <description>UpdateJenkinsJobstatusSuccess</description>
        <field>Last_Build_Status__c</field>
        <formula>"SUCCESS"</formula>
        <name>UpdateJenkinsJobstatusSuccess</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <targetObject>Jenkins_Job__c</targetObject>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>UpdateJenkinsJobstatusSuccess_time</fullName>
        <description>Update the parent jenkins job status to SUCCESS</description>
        <field>Last_Build_Status__c</field>
        <formula>"SUCCESS"</formula>
        <name>UpdateJenkinsJobstatusSuccess</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <targetObject>Jenkins_Job__c</targetObject>
    </fieldUpdates>
    <rules>
        <fullName>UpdateJenkinsJobstatusPending</fullName>
        <actions>
            <name>Build_Status</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Jenkins_Build__c.Status__c</field>
            <operation>equals</operation>
            <value>PENDING</value>
        </criteriaItems>
        <description>Whenever the new jenkins  is created update the last build status as PENDING</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>UpdateJenkinsJobstatusSuccess</fullName>
        <active>false</active>
        <criteriaItems>
            <field>Jenkins_Build__c.Status__c</field>
            <operation>equals</operation>
            <value>SUCCESS</value>
        </criteriaItems>
        <description>Whenever the update jenkins  build to success update the last build status as SUCCESS</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>UpdateJenkinsJobstatusSuccess_time</name>
                <type>FieldUpdate</type>
            </actions>
            <offsetFromField>Jenkins_Build__c.Trigger_Time__c</offsetFromField>
            <timeLength>1</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
</Workflow>
